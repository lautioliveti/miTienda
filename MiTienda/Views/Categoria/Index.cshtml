@model List<CategoriaVM>

<div class="row justify-content-between ">
    <div class="col-3">
        <h4>Categories</h4>
    </div>
    <div class="col-3 text-end">
        <a href="/Categoria/AddEdit" class="btn btn-success">Create new</a>
    </div>
</div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th style="width:120px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoriaNombre</td>
                <td style="width:120px">
                    <a href="/Categoria/AddEdit/@item.CategoriaID" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <button class="btn btn-sm btn-danger" onclick="deleteItem(@item.CategoriaID)"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function deleteItem(id)
        {
            Swal.fire({
              title: "¿Estas seguro?",
              text: "No podras revertirlo!",
              icon: "warning",
              showCancelButton: true,
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
              confirmButtonText: "Si, eliminar!",
              cancelButtonText: "No, volver"
            }).then((result) => {
              if (result.isConfirmed) {
                window.location.href='@Url.Action("Delete", "Categoria")'+'?id='+id
              }
            });
            
        }
    </script>
}